{
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prefer-arrow", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-var": "error",
    "prefer-arrow/prefer-arrow-functions": [
      "error",
      {
        "disallowPrototype": true,
        "singleReturnOnly": false,
        "classPropertiesAllowed": false
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "node": true,
    "jest": true
  },
  "globals": {
    "Proxy": true
  }
}
